<header></header>
<style class="pic">
.parallax { 
  background-image: url("https://i.ibb.co/Tvf4VMK/img1111.jpg");
  height: 500px; 
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}
</style>

<!-- Container element -->
<div  class= "parallax"  >


</div>

<p id="notice"><%= notice %></p>
<p>
<br/>
<%= link_to href="https://www.google.com/maps/?q=#{@place.latitude},#{@place.longitude}" do %>
<%= image_tag ("https://maps.googleapis.com/maps/api/staticmap?zoom=17&size=400x300&center=#{@place.latitude},#{@place.longitude}&key=AIzaSyAV88UZweDKtvKiUEDRBEFHiwPShtVwav4") %>
<% end %>
</p>
<p>
  <strong>Country:</strong>
  <%= @place.country %>
</p>

<p>
  <strong>City:</strong>
  <%= @place.city %>
</p>

<p>
  <strong>Catogry:</strong>
  <%= @place.catogry %>
</p>

<p>
  <strong>Name:</strong>
  <%= @place.name %>
</p>

<p>
  <strong>Visit:</strong>
  <%= @place.visit %>
</p>

<p>
  <strong>Favorite:</strong>

  <%= link_to 'unfavorite',favorite_place_path(@place) %> 
  <strong class="favorite-" id=<%="favorite-#{@place.id}" %>><%= @place.favorite%></strong>
</p>

 
<h2>Comments</h2>
<%= render @place.comments %>
 
<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<div class="options"> 
<%= link_to 'Edit', edit_place_path(@place) %> |
<%= link_to 'Back', places_path %>
</div>