<h2 class="reset">Forgot your password?</h2>

<div class="container">
<div class="row">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post },
html: {class: "col-md-offset-5 col-md-3"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-login"> 
  <h3>Reset Password</h3>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
    class: "form-control input-sm chat-input", placeholder: "Email address" %>
  </div>

  <div class="actions">
  <span class="btn">
    <%= f.submit "Reset", class:"btn btn-primary btn-md", id: "fa fa-sign-in"%>
    </span>
  </div>

<% end %>
<%= render "devise/shared/links" %>

</div>
</div>
</div>
